  - var description = 'Listen to the music of the Washington University Aristocats. Watch our concerts & hear our recordings.';

block header
  .header.header--bleed.row(style="background-image:url('images/music/header.jpg');")
      h1.header__title music

block content
  .content.row
    h1 Our music
    p The Aristocats host two major concerts each year, one in early Winter (<strong>Be Our Guest</strong>) and one in mid-spring (<strong>Bella Notte</strong>). We also sing at small community engagements throughout the year, and deliver <strong>Aristograms</strong> on the week of Valentine's Day with a special repertoire.
  .content.row
    .col-md-8
      iframe(width="560" height="315" src="https://www.youtube.com/embed/F4ICMxmSLBc" frameborder="0" allowfullscreen)
    .block.block--light.col-md-4
      h2 Phineas and Ferb Medley
      p Our performance of Ryan Hoffman's <strong>Phineas and Ferb Medley</strong> from Bella Notte 2015.
      p <strong>Soloists</strong>: Mitch Styczynski, Alice Liu, Vanessa Burks, Michelle Zhang, and Ryan Hoffman.
      a.block(href="https://youtube.com/user/thearistocatswashu/") Watch more on YouTube &rarr;
  .content.row
    .col-md-8.col-md-push-4
      iframe(width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/62909869&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false")
    .block.block--light.col-md-4.col-md-pull-8
      h2 Soundcloud
      p You can also find us on Soundcloud.
      a.block(href="https://soundcloud.com/wash-u-aristocats") Soundcloud &rarr;
  .content.row
    h2 Current songs
    ul.float-grid
      - var lineup = [{ title: 'Disney Intro', artist: 'Leigh Harline & Ned Washington', arranger: 'TBD'}, { title: 'Life Is a Highway', artist: 'Tom Cochrane & Rascal Flatts', arranger: 'Ben Stolovitz', soloist: 'TBD' }, { title: 'Down in New Orleans', artist: 'Dr. John & Randy Newman', arranger: 'Ben Stolovitz', soloist: 'TBD' }, { title: 'Everybody Wants to Be a Cat (alumni song)', artist: 'Richard M. Sherman, Robert B. Sherman, Al Rinker, Floyd Huddleston', arranger: 'Stephanie Drahozal'}, { title: 'Why Should I Worry?', artist: 'Billy Joel', arranger: 'Rishil Mehta', soloist: 'TBD' }, { title: 'Love in 3/4 Medley', artist: '???', arranger: 'Ryan Hoffman', soloist: 'TBD' }, { title: 'Son of Man', artist: 'Phil Collins', arranger: 'Nicole Cooper', soloist: 'TBD' }, { title: 'Go the Distance', artist: 'Alan Menken', arranger: 'Michelle Zhang & Patricia Chen', soloist: 'TBD' }, { title: 'Prince Ali', artist: 'Rishil Mehta', arranger: 'Alan Menken and Howard Ashman', soloist: 'TBD' }, { title: 'Love Is an Open Door', artist: 'Kristen Anderson-Lopez & Robert Lopez', arranger: 'Patricia Chen', soloist: 'Michael Duan & Michelle Zhang' }, { title: 'You\'ll Be in My Heart', artist: 'Phil Collins', arranger: 'Katie Gould', soloist: 'Michael Duan' }];
      each song in lineup
        li.float-grid__item
          .float-grid__content
            h3= song.title
            table.definition-table
              tr
                th Original
                td=song.artist
              tr
                th Arrangement
                td=song.arranger
              if song.soloist
                tr
                  th Soloist
                  td=song.soloist
