    .container
      block container
        block header

        nav.navigation#nav
          button.navigation__hamburger#nav-toggler(tabindex="1") Menu
          ul.navigation__list
            each item in nav
              if currentPage === item.title
                li.navigation__item.navigation__item--current: a.navigation__link(href=item.href)= item.title
              else
                li.navigation__item: a.navigation__link(href=item.href)= item.title

